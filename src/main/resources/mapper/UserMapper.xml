<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.tencent.wxcloudrun.dao.UserMapper">

    <resultMap id="userResultMap" type="com.tencent.wxcloudrun.model.User">
        <id property="id" column="id"/>
        <result property="openid" column="openid"/>
        <result property="nickname" column="nickname"/>
        <result property="avatarUrl" column="avatar_url"/>
        <result property="role" column="role"/>
        <result property="createdAt" column="created_at" javaType="java.time.LocalDateTime"/>
        <result property="updatedAt" column="updated_at" javaType="java.time.LocalDateTime"/>
    </resultMap>

    <select id="findByOpenid" resultMap="userResultMap" parameterType="java.lang.String">
        SELECT id, openid, nickname, avatar_url, role, created_at, updated_at
        FROM users
        WHERE openid = #{openid}
    </select>

    <select id="findById" resultMap="userResultMap" parameterType="java.lang.Integer">
        SELECT id, openid, nickname, avatar_url, role, created_at, updated_at
        FROM users
        WHERE id = #{id}
    </select>

    <select id="findByIds" resultMap="userResultMap">
        SELECT id, openid, nickname, avatar_url, role, created_at, updated_at
        FROM users
        WHERE id IN
        <foreach collection="ids" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </select>

    <insert id="insert" parameterType="com.tencent.wxcloudrun.model.User" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO users (openid, nickname, avatar_url, role)
        VALUES (#{openid}, #{nickname}, #{avatarUrl}, #{role})
    </insert>

    <update id="update" parameterType="com.tencent.wxcloudrun.model.User">
        UPDATE users
        SET nickname = #{nickname},
            avatar_url = #{avatarUrl},
            role = #{role}
        WHERE id = #{id}
    </update>

</mapper>

